{
    "info": {
        "name": "Users API Full Test Suite",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\"name\": \"{{name}}\", \"surname\": \"{{surname}}\", \"personID\": \"{{personID}}\"}"
                },
                "url": {
                    "raw": "{{baseUrl}}/users",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "users"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status is 201\", function () { pm.response.to.have.status(201); });",
                            "var jsonData = pm.response.json();",
                            "pm.test(\"Response has ID\", function () { pm.expect(jsonData).to.have.property('id'); });",
                            "pm.environment.set(\"userId\", jsonData.id);"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Get User By ID",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/users/{{userId}}"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status is 200\", function () { pm.response.to.have.status(200); });"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Get All Users",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/users"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status is 200\", function () { pm.response.to.have.status(200); });"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Update User",
            "request": {
                "method": "PUT",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\"name\": \"UpdatedName\", \"surname\": \"UpdatedSurname\"}"
                },
                "url": "{{baseUrl}}/users/{{userId}}"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status is 200\", function () { pm.response.to.have.status(200); });"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Delete User",
            "request": {
                "method": "DELETE",
                "url": "{{baseUrl}}/users/{{userId}}"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status is 200\", function () { pm.response.to.have.status(200); });"
                        ]
                    }
                }
            ]
        }
    ]
}